{
  // For runtime and type tests during CI.
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "noEmit": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noImplicitReturns": false
  },
  "exclude": ["dist", "dist", "website", "docs"],
  "include": [
    "type-tests",
    "test",
    "./**/*.test.ts*",
    "./**/*.test-d.ts*",
    "./**/*.spec.ts*",
    "./**/tests/**/*",
    "./**/*.typetest.ts*"
  ]
}
